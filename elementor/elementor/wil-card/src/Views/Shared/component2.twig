{% set componentName = "wil-card" %}
{% set background = item.backgroundColor ? 'background-color:' ~ item.backgroundColor ~ ';' : '' %}
{% set iconColor = item.iconColor ? 'color:' ~ item.iconColor ~ ';' : '' %}
{% set titleColor = item.titleColor ? 'color:' ~ item.titleColor ~ ';' : '' %}
{% set textColor = item.textColor ? 'color:' ~ item.textColor ~ ';' : '' %}
{% set buttonColor = item.buttonColor ? 'color:' ~ item.buttonColor ~ ';' : '' %}
{% set buttonBackgroundColor = item.buttonBackgroundColor ? 'background-color:' ~ item.buttonBackgroundColor ~ ';' : '' %}

<div class="{{ componentName }}-2 c:#000 lh:1.5 ta:center">

  {% if item.image %}
    <div class="{{ componentName }}-2__img pos:relative pt:75% bgp:center bgz:cover" style="background-image: url('{{ item.image }}')">
      {% if item.icon %}
        <div class="{{ componentName }}-2__icon fz:pfs(40px,60px) pos:absolute t:calc(50%_-_30px) l:50% trf:translate(-50%,-50%) c:#fff" style="{{ iconColor }}">
          {% if item.icon.url %}
            <img class="w:50px" src="{{ item.icon.url }}" alt="">
          {% else %}
              <i class="{{ item.icon }}"></i>
          {% endif %}
        </div>
      {% endif %}
    </div>
  {% else %}
    {% if item.icon %}
      <div class="{{ componentName }}-2__icon fz:pfs(40px,60px) pt:20px" style="{{ iconColor }}">
        <i class="{{ item.icon }}"></i>
      </div>
    {% endif %}
  {% endif %}

  <div class="p:15px p:20px@sm p:25px_20px@md m:20px bgc:#fff pos:relative z:9 {{ item.image ? 'mt:-50px' : 'mt:0' }}" style="{{ background }}">
    {% if item.title %}
      <h2 class="{{ componentName }}-2__title m:0 fz:pfs(22px,26px) fw:600!" style="{{ titleColor }}">{{ item.title }}</h2>
    {% endif %}

    {% if item.text %}
      <div class="{{ componentName }}-2__text mt:10px op:0.8 fz:16px c:#666" style="{{ textColor }}">{{ item.text }}</div>
    {% endif %}

    {% if item.buttonText %}
      <a href="{{ item.buttonUrl }}" class="{{ componentName }}-2__btn d:inline-block bxsh:none o:0 td:none p:15px_30px bdrs:40px bgc:#2fc5af c:#fff mt:30px fz:14px fw:600" style="{{ buttonColor }}{{ buttonBackgroundColor }}">{{ item.buttonText }}</a>
    {% endif %}
  </div>
</div>
